{{define "title"}}{{.Recipe.Title}}{{ end }}

{{define "main"}}
    <div class="d-flex align-items-center justify-content-between pb-4">
        <a class="btn btn-outline-light" href="/recipes/{{.Recipe.Id}}/edit">
            <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 512 512"
                    fill="currentColor"
                    width="1em"
                    height="1em"
                    class="me-1"
            >
                <path
                        d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160L0 416c0 53 43 96 96 96l256 0c53 0 96-43 96-96l0-96c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 96c0 17.7-14.3 32-32 32L96 448c-17.7 0-32-14.3-32-32l0-256c0-17.7 14.3-32 32-32l96 0c17.7 0 32-14.3 32-32s-14.3-32-32-32L96 64z"
                />
            </svg>
            Edit
        </a>

        <div class="dropdown">
            <button
                    class="btn btn-outline-light"
                    type="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                    aria-label="Open dropdown button"
            >
                <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 512 512"
                        fill="currentColor"
                        width="1em"
                        height="1em"
                        class="me-1"
                >
                    <path
                            d="M64 144a48 48 0 1 0 0-96 48 48 0 1 0 0 96zM192 64c-17.7 0-32 14.3-32 32s14.3 32 32 32l288 0c17.7 0 32-14.3 32-32s-14.3-32-32-32L192 64zm0 160c-17.7 0-32 14.3-32 32s14.3 32 32 32l288 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-288 0zm0 160c-17.7 0-32 14.3-32 32s14.3 32 32 32l288 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-288 0zM64 464a48 48 0 1 0 0-96 48 48 0 1 0 0 96zm48-208a48 48 0 1 0 -96 0 48 48 0 1 0 96 0z"
                    />
                </svg>
            </button>
            <ul class="dropdown-menu">
                <li>
                    <button
                            class="dropdown-item text-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#confirmDeleteModal"
                    >
                        <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 448 512"
                                fill="currentColor"
                                width="1em"
                                height="1em"
                                class="me-1"
                        >
                            <path
                                    d="M135.2 17.7L128 32 32 32C14.3 32 0 46.3 0 64S14.3 96 32 96l384 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-96 0-7.2-14.3C307.4 6.8 296.3 0 284.2 0L163.8 0c-12.1 0-23.2 6.8-28.6 17.7zM416 128L32 128 53.2 467c1.6 25.3 22.6 45 47.9 45l245.8 0c25.3 0 46.3-19.7 47.9-45L416 128z"
                            />
                        </svg>
                        Delete
                    </button>
                </li>
            </ul>
        </div>
    </div>

    {{ with.Recipe }}
        <div class="row">
            <div class="col-sm-5 col-md-4">
                <img
                        src="{{.ImageURLOrDefault}}"
                        width="300"
                        height="300"
                        class="img-fluid w-100 pb-2"
                        alt="{{.Title}}"
                />
            </div>
            <div class="col-sm-7 col-md-8">
                <h1 class="h3 pb-2">{{.Title}}</h1>
                <p>{{.Description}}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-5 col-md-4">
                {{if .Ingredients}}
                    <h2 class="h5">Ingredients</h2>
                    <ul class="list-group list-group-flush">
                        {{range $index, $element := .IngredientsToList}}
                            <li class="list-group-item">
                                <input
                                        class="form-check-input me-1"
                                        type="checkbox"
                                        value=""
                                        id="checkbox{{ $index }}"
                                />
                                <label
                                        class="form-check-label stretched-link"
                                        for="checkbox{{ $index }}"
                                >
                                    {{ $element }}
                                </label>
                            </li>
                        {{
                        end
                        }}
                    </ul>
                {{ end }}
            </div>
            <div class="col-sm-7 col-md-8">
                {{if .Directions}}
                    <h2 class="h5 pt-4">Directions</h2>
                    {{ range.DirectionsToList }}
                        <p>{{.}}</p>
                    {{ end }}
                {{ end }}
            </div>
        </div>
    {{ end }}

    <div
            class="modal fade"
            id="confirmDeleteModal"
            tabindex="-1"
            aria-labelledby="confirmDeleteModalLabel"
            aria-hidden="true"
    >
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title fs-5" id="confirmDeleteModalLabel">
                        Confirm Deletion
                    </h2>
                </div>
                <div class="modal-body">
                    <p>
                        Are you sure you want to delete this recipe? This action cannot be
                        undone, and the recipe will be permanently removed.
                    </p>
                </div>
                <div class="modal-footer">
                    <button
                            type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal"
                    >
                        Cancel
                    </button>
                    <form id="deleteForm" action="/recipes/{{.Recipe.Id}}" method="post">
                        <input type="hidden" name="_method" value="DELETE"/>
                        <button type="submit" class="btn btn-danger">Delete Recipe</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{ end }}
